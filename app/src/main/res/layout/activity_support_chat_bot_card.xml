<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="#8CB7F2"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="327dp"
            android:layout_height="121dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Quer auxÃ­lio do chatbot para estudar o assunto?"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonContinuar"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#0F5ECB"
            android:fontFamily="@font/poppins_semibold"
            android:text="Continuar sem chatbot"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@id/buttonTrocar"
            app:layout_constraintHorizontalChainStyle="packed"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
            app:strokeColor="#FF4747" />

        <Button
            android:id="@+id/buttonTrocar"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#0F5ECB"
            android:fontFamily="@font/poppins_semibold"
            android:text="Troque de plano"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitulo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



