<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootFornecedorHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <!-- CONTEÚDO ROLÁVEL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:layout_marginBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: avatar + busca + ícones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_person_24"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Full" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:startIconDrawable="@drawable/ic_search_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtSearch"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Pesquisar"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnBell"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/content_desc_notifications"
                    app:srcCompat="@drawable/ic_bell_24"/>

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/content_desc_settings"
                    app:srcCompat="@drawable/ic_settings_24"/>
            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Análise de desempenho"
                android:textColor="#0C2233"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Cards de “Impacto do curso” -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 (claro) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImpacto1"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textColor="#0C2233"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textColor="#697586"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtPercent1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="62%"
                                android:textColor="#0C2233"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_gravity="start|bottom"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 2 (selecionado escuro) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImpacto2"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#062A43"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textColor="#C7D3E0"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtPercent2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="62%"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_gravity="start|bottom"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 3 (claro) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImpacto3"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textColor="#0C2233"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textColor="#697586"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtPercent3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="62%"
                                android:textColor="#0C2233"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:layout_gravity="start|bottom"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Toggle (Ave / Bovino / Suíno) -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGrupos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAve"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ave"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBovino"
                    style="@style/Widget.MaterialComponents.Button.FilledButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Bovino"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSuino"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Suíno"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Espaço onde ficavam os gráficos (removidos) -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- MENU INFERIOR (COMPONENTE INCLUÍDO) -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/view_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
