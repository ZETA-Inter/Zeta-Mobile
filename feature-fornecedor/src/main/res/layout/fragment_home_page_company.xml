<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootFornecedorHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Análise de desempenho"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"/>

            <!-- KPIs (carrossel) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card KPI 1 (claro) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKpi1"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textSize="12sp"
                                android:textColor="@color/divider"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtKpi1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card KPI 2 (selecionado – fundo primário) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKpi2"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="?attr/appColorPrimary">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="?attr/appColorOnPrimary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textSize="12sp"
                                android:textColor="?attr/appColorOnPrimary"
                                android:alpha="0.8"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtKpi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="?attr/appColorOnPrimary"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card KPI 3 (claro) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardKpi3"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impacto do curso"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acompanhe o desenvolvimento"
                                android:textSize="12sp"
                                android:textColor="@color/divider"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/txtKpi3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- PAINEL EXTERNO ARREDONDADO (com tamanho flexível) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/painelAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="6dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Segmentação Ave/Bovino/Suíno -->
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleAreas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAve"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Ave"
                            app:iconPadding="0dp"
                            app:backgroundTint="@color/bg_light"
                            android:textColor="@color/primary_dark"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBovino"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Bovino"
                            app:backgroundTint="@color/bg_light"
                            android:textColor="@color/primary_dark"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSuino"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Suíno"
                            app:backgroundTint="@color/bg_light"
                            android:textColor="@color/primary_dark"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <Space
                        android:id="@+id/spaceConteudo"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- MENU INFERIOR (componente separado) -->
    <com.example.feature_fornecedor.ui.bottomnav.CompanyBottomNavView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
