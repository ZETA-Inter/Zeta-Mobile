<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="12dp">

    <!-- Barra branca arredondada -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/common_white"/>

    <!-- Ícones laterais -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="28dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnAwards"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_trophy_24"
                app:tint="@color/company_nav_icon_tint" />
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTeam"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_users_24"
                app:tint="@color/company_nav_icon_tint" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Botão Home central (círculo azul com ícone branco) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHome"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="38dp"
        app:cardElevation="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/appColorPrimary">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_home_24"
                app:tint="?attr/appColorOnPrimary" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
