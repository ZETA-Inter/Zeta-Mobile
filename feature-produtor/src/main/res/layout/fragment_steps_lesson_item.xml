<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">

        <View
            android:id="@+id/linhaVertical"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circuloEtapa"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/circuloEtapa"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle_inactive"
            app:layout_constraintBottom_toBottomOf="@+id/etapaId"
            app:layout_constraintEnd_toEndOf="@+id/linhaVertical"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/linhaVertical"
            app:layout_constraintTop_toTopOf="@+id/etapaId"
            app:layout_constraintVertical_bias="0.444" />

        <TextView
            android:id="@+id/etapaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Etapa 2"
            android:textColor="#0F5ECB"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/linhaVertical"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etapaDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Bem-estar animal"
            app:layout_constraintStart_toEndOf="@+id/linhaVertical"
            app:layout_constraintTop_toBottomOf="@+id/etapaId" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
