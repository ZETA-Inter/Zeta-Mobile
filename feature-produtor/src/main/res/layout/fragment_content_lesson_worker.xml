<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentLessonWorker">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="68dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Atividade"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle_inactived" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Conteúdo"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle_active" />

        <TextView
            android:id="@+id/titulocontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Bem-estar Animal"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/icon_logo_boi"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toEndOf="@id/btComeback"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btComeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_curved_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_logo_boi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_logo_boi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/linhaVertical"
            android:layout_width="166dp"
            android:layout_height="4dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/line_rounded"
            app:layout_constraintEnd_toStartOf="@+id/circle_inactived"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/circle_active"
            app:layout_constraintTop_toBottomOf="@+id/titulocontent" />

        <ImageView
            android:id="@+id/circle_active"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/circle_active"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulocontent" />

        <ImageView
            android:id="@+id/circle_inactived"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="84dp"
            android:src="@drawable/circle_inactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulocontent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btComeçar"
            style="@style/StartStepPurpleButton"
            android:layout_width="170dp"
            android:layout_height="63dp"
            android:layout_marginBottom="80dp"
            android:background="#563887"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Continuar"
            app:backgroundTint="#563887"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iconConteudoExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_successful"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tvConteudo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linhaVertical" />

        <TextView
            android:id="@+id/tvConteudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Carregando...."
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btComeçar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linhaVertical"
            app:layout_constraintVertical_bias="0.533" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>