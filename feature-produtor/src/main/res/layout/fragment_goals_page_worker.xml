<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".GoalsPageWorkerFragment"> <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/goals_header_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtPesquisa2"
        android:layout_width="214dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="96dp"
        android:hint="Pesquisar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/perfil3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/perfil3"
        app:layout_constraintTop_toTopOf="@+id/perfil3" />

    <ImageView
        android:id="@+id/icon_perfil_goals"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:contentDescription="Perfil do Usuário"
        android:src="@drawable/perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_notificacao_goals"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Notificações"
        android:src="@drawable/iconnotific"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icon_configuracoes_goals"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_configuracoes_goals"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Configurações"
        android:src="@drawable/iconconfig"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/goals_header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_diario"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8A2BE2"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Diário"
            android:textAllCaps="false"
            android:textColor="@android:color/system_accent3_1000" />

        <Button
            android:id="@+id/btn_semanal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#8440C7"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Semanal"
            android:textAllCaps="false"
            android:textColor="#120101" />

        <Button
            android:id="@+id/btn_mensal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#E0E0E0"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Mensal"
            android:textAllCaps="false"
            android:textColor="#0F0101" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_metas_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Metas Diárias"
        android:textColor="#0D0000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabs_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_metas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_metas_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_daily_goal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.constraintlayout.widget.ConstraintLayout>