<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FDFF"
    tools:context=".ChatBotWorkerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_meta"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Voltar"
            android:src="@drawable/voltarchat"
            app:layout_constraintEnd_toStartOf="@+id/titulo_chat"
            app:layout_constraintHorizontal_bias="0.292"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titulo_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Chatbot Zeta"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_atividade"
            android:layout_width="75dp"
            android:layout_height="77dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Ãcone Chatbot"
            android:src="@drawable/boinoite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.879"
            app:layout_constraintStart_toEndOf="@+id/titulo_chat"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="#e0e0e0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo_chat" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recicler_bot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/inputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="346dp"
            android:layout_height="66dp"
            android:layout_marginTop="720dp"
            android:background="#F9F5FF"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/editMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/poppins_medium"
                android:hint="    Mensagem..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:minHeight="48dp"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textColorHint="#888" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="Enviar"
                android:src="@drawable/btnenviarchat"
                app:tint="@color/purple_custom" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
