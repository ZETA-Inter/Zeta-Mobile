<resources>
    <style name="ShapeAppearance.TopRoundedLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="NoStrokeCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TopRoundedLarge</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">12dp</item>
        <item name="useCompatPadding">false</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.FilledInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/input_fill</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RoundedInputs</item>
    </style>

    <style name="ShapeAppearance.MediumRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="NoStrokeButton" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="ShapeAppearance.RoundedInputs">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_filter_button_normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
