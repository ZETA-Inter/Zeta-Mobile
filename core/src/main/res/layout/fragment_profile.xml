<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FOTO DO PERFIL -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeCircle"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="centerCrop"
        android:contentDescription="@string/profile_image"/>

    <!-- BOTÃO DE CÂMERA SOBREPOSTO NA BASE DIREITA DA FOTO -->
    <ImageButton
        android:id="@+id/btnCamera"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_circle_camera"
        android:padding="8dp"
        android:contentDescription="@string/tirar_foto"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- NOME DO USUÁRIO -->
    <TextView
        android:id="@+id/nome_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spartan_medium"
        android:text="Nome"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- TÍTULO DE DESEMPENHO -->
    <TextView
        android:id="@+id/titulocontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/spartan"
        android:text="Desempenho"
        android:textColor="#0F0F0F"
        app:layout_constraintTop_toBottomOf="@id/nome_worker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PROGRESSO DE LIÇÕES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_progress_lesson"
        android:layout_width="182dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titulocontent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/item_progress_lesson" />

    <!-- PROGRESSO DE METAS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_progress_goals"
        android:layout_width="182dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titulocontent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        tools:itemCount="1"
        tools:listitem="@layout/item_progress_goals" />

    <!-- TÍTULO DE CURSOS -->
    <TextView
        android:id="@+id/txt_lessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/spartan"
        android:text="Cursos em andamento"
        android:textColor="#0F0F0F"
        app:layout_constraintTop_toBottomOf="@id/item_progress_lesson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LISTA DE CURSOS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_lesson"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_lessons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_lessons_worker" />

</androidx.constraintlayout.widget.ConstraintLayout>
