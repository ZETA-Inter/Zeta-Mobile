<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  android:layout_height="wrap_content"
    android:layout_margin="24dp"  app:cardCornerRadius="15dp"
    app:cardElevation="4dp"  tools:context=".model.mongo.Class">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="24dp"  android:paddingTop="20dp">

        <TextView
            android:id="@+id/cursoTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"   android:fontFamily="@font/poppins_semibold"
            android:text="Titulo"
            android:textColor="#070707"
            android:textSize="18sp"   android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cursoDescr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"  android:layout_marginTop="8dp"   android:fontFamily="@font/poppins_medium"
            android:text="decricao"
            android:textColor="#3A3A3A"
            android:textSize="16sp"  app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cursoTitulo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>